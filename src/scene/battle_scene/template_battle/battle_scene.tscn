func sword_ready(caller : Battler, victim : Battler):
	set_action_prop(\"swing\", \"can_call\", true)

func sword_swing(caller : Battler, victim : Battler):
	Battle.damage(caller, victim, 15)
	set_action_prop(\"swing\", \"can_call\", false)

func _init() -> void:
	create_action(\"ready\", \"Ready\", \"-Use 1 TU\\n-Enable \\\"Swing\\\" action\", load(\"res://asset/place_holder/base_action_bg.png\"), 1, true, sword_ready)
	create_action(\"swing\", \"Swing\", \"Use 3 TU\\n-Deals 15 damages to enemy\", load(\"res://asset/place_holder/base_action_bg.png\"), 3, false, sword_swing)
"

[sub_resource type="GDScript" id="GDScript_hr0kv"]
script/source = "extends ActionSet

func bow_reload(caller : Battler, victim : Battler):
	set_action_prop(\"shoot\", \"arrow\", get_action_prop(\"shoot\", \"arrow\") + 1)
	set_action_prop(\"shoot\", \"can_call\", true)

func bow_shoot(caller : Battler, victim : Battler):
	if get_action_prop(\"shoot\", \"arrow\") > 0:
		Battle.damage(caller, victim, 10)
		set_action_prop(\"shoot\", \"arrow\", get_action_prop(\"shoot\", \"arrow\") - 1)
		
		if get_action_prop(\"shoot\", \"arrow\") <= 0:
			set_action_prop(\"shoot\", \"can_call\", false)

func _init() -> void:
	create_action(\"reload\", \"Reload\", \"-Use 1 TU\\n-Reload an arrow to bow\", load(\"res://asset/place_holder/base_action_bg.png\"), 1, true, bow_reload)
	create_action(\"shoot\", \"Shoot\", \"-Use 2 TU\\n-Deal 10 damages\", load(\"res://asset/place_holder/base_action_bg.png\"), 2, false, bow_reload, {\"arrow\" : 0})
"

